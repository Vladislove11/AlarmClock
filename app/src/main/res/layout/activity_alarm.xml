<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlarmActivity">
    <TextView
        android:id="@+id/textAlarmTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Подъём"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/stopAlarmButtonBTN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:flow_verticalBias="0.1"/>

    <ImageView
        android:layout_width="221dp"
        android:layout_height="248dp"
        android:src="@drawable/alarm_ic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stopAlarmButtonBTN" />

    <Button
        android:id="@+id/stopAlarmButtonBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выключить будильник"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>